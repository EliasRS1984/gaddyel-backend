# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# MongoDB URI - Reemplaza con tu propia cadena de conexión
# Obtén en: https://www.mongodb.com/cloud/atlas → Conexiones → Connection String
# Formato: mongodb+srv://usuario:contraseña@cluster.mongodb.net/nombre-base-datos?appName=nombre-app
MONGO_URI=mongodb+srv://username:password@cluster-name.mongodb.net/database-name?appName=app-name

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
# Puerto en el que corre el servidor (por defecto 5000, Render lo asigna automáticamente)
PORT=5000

# Entorno (development, production, test)
NODE_ENV=development

# ============================================
# CONFIGURACIÓN DE CLOUDINARY (Almacenamiento de imágenes)
# ============================================
# Obtén en: https://cloudinary.com/console → Dashboard
# Nombre de tu nube Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name

# API Key de Cloudinary
CLOUDINARY_API_KEY=your_api_key

# API Secret de Cloudinary (mantener seguro)
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# CONFIGURACIÓN DE AUTENTICACIÓN (JWT)
# ============================================
# Secret para firmar tokens JWT (genera uno aleatorio y seguro)
# Ejemplo: openssl rand -hex 64
JWT_SECRET=tu_jwt_secret_muy_largo_y_seguro

# Días de expiración del refresh token (por defecto 30)
REFRESH_TOKEN_EXP_DAYS=30

# ============================================
# CONFIGURACIÓN DE CORS (Seguridad)
# ============================================
# Dominio del frontend (permite peticiones solo de aquí)
FRONTEND_URL=http://localhost:5173

# ============================================
# CONFIGURACIÓN DE RATE LIMITING (Protección contra ataques)
# ============================================
# Máximo número de peticiones por minuto (por defecto 100)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
